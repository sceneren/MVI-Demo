<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <com.zhpan.bannerview.BannerViewPager
        android:id="@+id/banner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:bvp_indicator_checked_color="@color/colorAccent"
        app:bvp_indicator_normal_color="#999999"
        app:bvp_indicator_slide_mode="scale"
        app:bvp_indicator_style="round_rect"
        app:bvp_indicator_radius="8dp"
        app:layout_constraintDimensionRatio="h,9:5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>